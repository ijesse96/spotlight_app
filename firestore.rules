rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to super simple queue system
    match /super_simple_queue/{document} {
      allow read, write: if true;
    }
    
    match /super_simple_timer/{document} {
      allow read, write: if true;
    }
    
    // Allow access to spotlight chat for real-time messaging
    match /spotlight_chat/{document} {
      allow read, write: if true;
    }
    
    // Allow access to user profiles
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Legacy collections for backward compatibility
    match /spotlight_queue/{document} {
      allow read, write: if true;
    }
    
    match /spotlight_timer/{document} {
      allow read, write: if true;
    }
    
    match /live_users/{document} {
      allow read, write: if true;
    }
    
    match /timers/{document} {
      allow read, write: if true;
    }
    
    // Local queue system
    match /local_queue/{document} {
      allow read, write: if true;
    }
    
    match /local_timer/{document} {
      allow read, write: if true;
    }
    
    // VLR queue system
    match /vlr_queue/{document} {
      allow read, write: if true;
    }
    
    match /vlr_timer/{document} {
      allow read, write: if true;
    }
  }
} 